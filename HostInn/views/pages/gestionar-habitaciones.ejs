<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <!-- navbar-->
    <%- include('../partials/header',{user : user}); %>


        <!-- Section about -->
        <section class="py-5 shadoww" id="about"
            style="background-image:  linear-gradient(120deg, #ffda3e 0%, #ffd630 100%); ">
            <div class="container px-4 py-5">

                <h1 class="text-dark display-1 strong">Habitaciones:</h1>

   
            </div>


        </section>




        <!-- Section habitaciones-->
        <section class="py-3 " id="hoteles"
            style="background-image:  linear-gradient(120deg, #ffffff 0%, #ebedee 100%);">
            <div class="container px-4 px-lg-5">

                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
                    style="transform: translateY(-75px);">






                    <!--Aqui van las cartas con los hoteles-->

                    <% habitaciones.forEach(function(habitacion) { %>
                        <% if (habitacion.Estado == 1) {%>
                        <div class="col mb-5">
                            <div class="card text-white bg-dark mb-3 shadoww border-0 rounded-0">
                                <!-- Product image-->
                                <img class="card-img-top rounded-0 image-cover" src="/<%= habitacion.Imagen %>"
                                    alt="https://dummyimage.com/450x300/" height="200" style="background-image: url(https://dummyimage.com/450x400/);"/>
                                <!-- Product details-->
                                <div class="card-body p-4 pb-0">
                                    <div class="text-left">
                                        <!-- Nombre-->
                                        <h5 class="fw-bolder text-primary">
                                            <%= habitacion.Nombre %>
                                        </h5>
            
                                        <p class="text-primary">Tipo: <span class="text-light"> <%= habitacion.Tipo %></span> </p>
                                            
                                        <p class="text-primary">Camas: <span class="text-light"> <%= habitacion.Num_Camas %></span> </p>

                                        <p class="text-primary">Capacidad: <span class="text-light"> <%= habitacion.Capacidad %> personas</span> </p>

                                            
                                    </div>
                                </div>

                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-left"><a class="btn btn-primary mt-auto" href="/editar-habitacion/<%=habitacion.IdHabitacion%>">Editar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% }); %>

                    <div class="col mb-5">
                        <div class="card text-white bg-dark mb-3 shadoww border-0 rounded-0">
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-left">
                                    <h5 class="fw-bolder text-primary">
                                        Nueva Habitacion
                                    </h5>
                                    <!-- Direccion del hotel-->
                                    .....

                                </div>
                            </div>

                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-left"><a class="btn btn-primary mt-auto" href="/nueva-habitacion/<%=idHotel%>">Nuevo</a>
                                </div>
                            </div>
                        </div>
                    </div>




                </div>
            </div>

        </section>




        <div class="bgimg-2 darken"></div>


        






        <!-- Footer-->
        <%- include('../partials/footer'); %>


</body>

</html>