<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body style="background-image: url(http://localhost:3000/public/assets/mountain.jpg);">

    <!-- navbar-->
    <%- include('../partials/header',{user : user}); %>

        <div style="height: 54px;"> </div>

        <div class="container-fluid">


            <div class="card shadoww mx-4 mb-3 mt-5 pt-3 bg-dark px-3 pb-4">
                <h4 class="text-light display-4"> Editando Hotel: <%= hotel.Administrador_IdAdministrador %>
                </h4>
                <form method="post" enctype="multipart/form-data" action="/update-hotel">
                    <div class="form-row">

                        <div class="form-group col pb-4">
                            <div class="row">
                                <div class="pr-5">
                                    <label class="text-primary" for="inputEmail4">Nombre:</label>
                                    <input type="text" value="<%=hotel.Nombre%>" class="form-control" id="inputEmail4"
                                        name="nombre" placeholder="Nombre">
                                </div>

                                <div class="text-right">
                                    <label class="text-primary text-right" for="inputEmail4">Estrellas:</label>
                                    <input type="number" min="0" max="5" value="<%=hotel.Estrellas%>"
                                        class="form-control" id="inputEmail4" name="estrellas" placeholder="Cedula">
                                </div>

                            </div>

                            <div class="row">
                                <div class="pr-5">
                                    <label class="text-primary" for="inputEmail4">Descripcion:</label>
                                    <input type="text" value="<%=hotel.Descripcion%>" class="form-control"
                                        id="inputEmail4" name="descripcion" placeholder="Nombre">
                                </div>

                                <div class="text-right">
                                    <label class="text-primary text-right" for="inputEmail4">Ubicación:</label>
                                    <input type="text" min="0" max="5" value="<%=hotel.Ubicación%>" class="form-control"
                                        id="inputEmail4" name="ubicacion" placeholder="Cedula">
                                </div>

                            </div>

                            <label class="text-primary text-right" for="inputEmail4">Imagen:</label>

                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="customFile" name="file">
                                <label class="custom-file-label" for="customFile">Imagen del Hotel</label>
                            </div>

                        </div>

                    </div>
                    <input value="<%= hotel.IdHotel %>" name="idHotel" readonly="readonly"
                        style="display: none;"></input>
                    <button type="submit" class="btn btn-primary">Editar</button>

                    <a type="button" class="btn btn-danger" href="/eliminar-hotel/<%= hotel.IdHotel %>">Eliminar</a>

                </form>

            </div>


        </div>

        <!-- Footer-->



</body>

</html>