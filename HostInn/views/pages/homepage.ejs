<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <!-- navbar-->
    <%- include('../partials/header', {user : user}); %>







        <!-- Header-->
        <header id="inicio">

            <!-- Logo-->
            <div class="" style="position: absolute;z-index: 1; width: 100%;">
                <div class="text-center text-white" style=" object-fit: contain; padding: auto;">

                    <img class="invert" src="public/assets/hostInn.svg"
                        style="width: 40%; object-fit: fill; vertical-align: -55vh;"></img>

                    <p class="lead fw-normal text-primary mb-0 ">Comodidad más cerca de usted</p>
                </div>
            </div>
            <!-- video-->
            <video class="image-cover darken" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop"
                style="height: 110vh; width: 100%; z-index: -2; position:fixed;">
                <source src="public/assets/video.mp4" type="video/mp4">
            </video>

        </header>

        <!-- para evitar overflow-->
        <div style="height: 110vh; width: 100%;"></div>



        <!-- Section hoteles-->
        <section class="py-3 shadoww" id="hoteles"
            style="background-image:  linear-gradient(120deg, #ffffff 0%, #ebedee 100%);">
            <div class="container px-4 px-lg-5">

                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
                    style="transform: translateY(-75px);">






                    <!--Aqui van las cartas con los hoteles-->

                    <% hoteles.forEach(function(hotel) { %>
                        <% if (hotel.Estado == 1) {%>
                        <div class="col mb-5">
                            <div class="card text-white bg-dark mb-3 shadoww border-0 rounded-0">
                                <!-- Product image-->
                                <img class="card-img-top rounded-0 image-cover" src="<%= hotel.rutaImagen %>"
                                    alt="https://dummyimage.com/450x400/" height="200" style="background-image: url(https://dummyimage.com/450x400/);"/>
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-left">
                                        <!-- Nombre del hotel-->
                                        <h5 class="fw-bolder text-primary">
                                            <%= hotel.Nombre %>
                                        </h5>
                                        <!-- Direccion del hotel-->
                                        <span class="bi-geo-alt-fill text-primary"></span>
                                            <%= hotel.Ubicación %>

                                            <div class="d-flex justify-content-left small text-primary mt-2 ">
                                                <% for(let i = 0; i < hotel.Estrellas; i++) { %>
                                                    <div class="bi-star-fill">‎ ‎</div>
                                                <% } %>
                                            </div>
                                    </div>
                                </div>

                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-left"><a class="btn btn-primary mt-auto" href="/rooms/<%= hotel.IdHotel %>">Reservar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% }); %>




                </div>
            </div>

        </section>




        <div class="bgimg-2 darken"></div>


        <!-- Section about -->
        <section class="py-5 shadoww" id="about"
            style="background-image:  linear-gradient(120deg, #ffda3e 0%, #ffd630 100%); ">
            <div class="container px-4 py-5">

                <h1 class="text-dark display-1 strong">Sobre Nosotros:</h1>

                <h4 class="lead" style=" position:relative; z-index: 50;">La compañía Host Inn es una franquicia
                    hotelera expandida en el territorio
                    centroamericano, cuyas sedes centrales se ubican en Costa Rica.

                    Nuestra prioridad es brindarle el mejor servicio a nuestros clientes, ofreciendo hoteles con alta
                    calidad y comodidades, cerca de los lugares más hermosos de centroamerica.</h4>




            </div>


        </section>

        <div class="bgimg-3"></div>






        <!-- Footer-->
        <%- include('../partials/footer'); %>


</body>

</html>