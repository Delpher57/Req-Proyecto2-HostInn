<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registrar Administrador</p>

                                    <!--Aqui manejamos el REGISTRO-->
                                    <form method="post" action="/insertar-admin/<%= tipo %>" class="mx-1 mx-md-4 registerForm">

                                        <div class="d-flex flex-row align-items-center mb-2">

                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example1c" name="nombre"
                                                    class="form-control" placeholder="Nombre Completo" />
                                            </div>
                                        </div>


                                        <div class="d-flex flex-row align-items-center mb-2">

                                            <div class="form-outline flex-fill mb-0">
                                                <input type="number" id="form3Example1c" name="cedula"
                                                    class="form-control" placeholder="Cedula" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="email" id="form3Example3c" name="email"
                                                    class="form-control" placeholder="Correo Electronico" />
                                            </div>
                                        </div>


                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example1c" name="user" class="form-control"
                                                    placeholder="Nombre De Usuario" />
                                            </div>
                                        </div>

                                        

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="form3Example4c" name="password"
                                                    class="form-control" placeholder="ContraseÃ±a" />
                                            </div>
                                        </div>


                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div class="form-outline flex-fill mb-0">
                                                Hotel Relacionado:
                                                
                                                <select class="form-control" name="hotel" multiple>
                                                    <% hoteles.forEach(function(hotel) { %>
                                                        <% if (hotel.Estado == 1) {%>
                                                            <option value="<%=hotel.IdHotel%>"><%= hotel.Nombre %></option>
                                                        <% } %>
                                                    <% }); %>
                                                </select>
                                                <i class="text-secondary">Presione CTRL o SHIFT para marcar varias opciones</i>
                                            </div>
                                        </div>

                                        


                                        <div class="d-flex justify-content-center mb-3 mb-lg-4">
                                            <button type="submit"
                                                class="flex-fill btn btn-primary btn-lg registerButton">Register</button>
                                        </div>

                                    </form>


                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-6  align-items-center order-1 order-lg-2">


                                    

                                    
                                        <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png"
                                            class="img-fluid" alt="Sample image">
                                    

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>


</html>