<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body style="background-image: url(http://localhost:3000/public/assets/mountain.jpg);">

    <!-- navbar-->
    <%- include('../partials/header',{user : user}); %>

        <div style="height: 54px;"> </div>

        <div class="container-fluid">


                <div class="card shadoww mx-4 mb-3 mt-5 pt-3 bg-dark px-3 pb-4">
                    <h4 class="text-light display-4"> Editar Reserva No: <%= history.IdReserva %>
                    </h4>
                    <form method="post" action="/editar-res">
                        <div class="form-row">

                            <div class="form-group col pb-4">
                                <div class="row">
                                    <div class="col-6">
                                        <label class="text-primary" for="inputEmail4">Fecha llegada:</label>
                                        <input type="date" value="<%=history.FechaInicio.substring(0,10);%>" class="form-control" id="inputEmail4" name="llegada"
                                            placeholder="llegada">
                                    </div>
                                    <div class="col-6 text-right">
                                        <label class="text-primary text-right" for="inputEmail4">Fecha
                                            salida:</label>
                                        <input type="date" value="<%=history.FechaFin.substring(0,10);%>"class="form-control" id="inputEmail4" name="salida"
                                            placeholder="llegada">
                                    </div>
                                </div>

                            </div>

                        </div>
                        <input value="<%= history.IdReserva %>" name="num_reservacion" readonly="readonly"
                            style="display: none;"></input>
                        <button type="submit" class="btn btn-primary">Editar</button>
                        <% if (user.tipo == 1) {%>
                        <a type="buttom" class="btn btn-danger" href="/cancelar-reserva/<%= history.IdReserva %>">Cancelar</a>
                        <% } %>
                    </form>
                    
                </div>

    
        </div>

        <!-- Footer-->
        


</body>

</html>